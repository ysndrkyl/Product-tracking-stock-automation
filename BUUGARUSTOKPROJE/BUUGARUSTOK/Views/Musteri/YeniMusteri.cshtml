@model BUUGARUSTOK.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>MÜŞTERİ ADI</label>
        @Html.TextAreaFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:red" })
    </div>
    <div>
        <label>MÜŞTERİ SOYADI</label>
        @Html.TextAreaFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:red" })
    </div>

    <div>
        <label>MÜŞTERİ TEL</label>
        @Html.TextAreaFor(m => m.MUSTERITEL, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERITEL, "", new { @style = "color:red" })
    </div>

    <div>
        <label>MÜŞTERİ INSTAGRAM</label>
        @Html.TextAreaFor(m => m.MUSTERIINSTAGRAM, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIINSTAGRAM, "", new { @style = "color:red" })
    </div>

    <div>
        <label>MÜŞTERİ ADRES</label>
        @Html.TextAreaFor(m => m.MUSTERIADRES, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIADRES, "", new { @style = "color:red" })
    </div>

    <div>
        <label>MÜŞTERİ E-MAIL</label>
        @Html.TextAreaFor(m => m.MUSTERIEMAIL, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIEMAIL, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">MÜŞTERİ EKLE</button>
    </div>
    <script>
        $('#btn1').click(function(){
            alert('Müşteri ekleme işlemi yapıldı...!');
        });
    </script>
</form>

